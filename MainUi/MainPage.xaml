<Page
    x:Class="MainUi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MainUi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Button
            x:Name="PickImgBtn"
            Margin="10"
            Content="Click Me!"
            Click="PickImgBtn_Click"/>
        <Button
            x:Name="LoginFbBtn"
            Content="Login with Facebook"
            Margin="10"
            Click="LoginFbBtn_Click" />
        <StackPanel
            Orientation="Horizontal">
            <Button
                x:Name="GoToABtn"
                Width="100"
                Margin="10"
                Content="A"
                Click="GoToABtn_Click" />
            <Button
                x:Name="GoToBBtn"
                Width="100"
                Margin="10"
                Content="B"
                Click="GoToABtn_Click" />
            <Button
                x:Name="GoToCBtn"
                Width="100"
                Margin="10"
                Content="C"
                Click="GoToABtn_Click" />
            <Button
                x:Name="GoToDBtn"
                Width="100"
                Margin="10"
                Content="D"
                Click="GoToABtn_Click" />
            <Button
                x:Name="GoToEBtn"
                Width="100"
                Margin="10"
                Content="E"
                Click="GoToABtn_Click" />
            <Button
                x:Name="GoBack"
                Content="Go Back"
                Width="100"
                Margin="10"
                Click="GoBack_Click" />
            <Button
                x:Name="GoForward"
                Content="Go Forward"
                Width="100"
                Margin="10"
                Click="GoForward_Click" />
        </StackPanel>

        <Frame
            x:Name="MyFrame"
            BorderBrush="Black"
            BorderThickness="2"
            Height="600"
            Width="400" />
    </StackPanel>
</Page>
